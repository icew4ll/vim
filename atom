# install atom rust {{{
sudo add-apt-repository ppa:webupd8team/atom
# }}}

# Python {{{
sudo add-apt-repository ppa:jonathonf/python-3.6
python3 --version
pip3 install --upgrade pip
pip3 install autopep8

# activate virtual env
venv
pip3 install pep8 flake8 jedi
pep8 --version
flake8 --version

# apm
apm install script predawn-syntax autocomplete-python file-icons minimap
linter-flake8 python-autopep8

# }}}

# vue {{{
# install preqs
apm install language-vue linter linter-eslint linter-ui-default intentions busy-signal vue-autocomplete

# enable linting html
1) edit > pref > packages > linter eslint > Lint HTML Files

# }}}

